<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             xmlns:models="clr-namespace:ShortestCycleDirGraph.Models"
             x:Class="ShortestCycleDirGraph.Pages.Settings.GraphLayout"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="Wybierz układ grafu" Style="{StaticResource Heading2}" />

                <ComboBox x:Name="SettingsList" Width="180" HorizontalAlignment="Left" Margin="0,20,0,0" SelectionChanged="SettingsList_SelectionChanged" >
                    
                </ComboBox>


            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
