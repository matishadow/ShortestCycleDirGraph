<UserControl x:Class="ShortestCycleDirGraph.Pages.Settings.About"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="Użyte biblioteki" Style="{StaticResource Heading2}" />
                <TextBlock x:Name="LibContent" TextWrapping="Wrap" />
                <TextBlock Text="Repozytorium projektu" Style="{StaticResource Heading2}" Margin="0,50,0,0" />
                <TextBlock x:Name="RepContent" TextWrapping="Wrap" />
                <TextBlock Text="Autorzy" Style="{StaticResource Heading2}"  Margin="0,50,0,0" />
                <TextBlock x:Name="AuthContent" TextWrapping="Wrap" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
